<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="materials-vb" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.wert.normic.materials.MaterialsTVController">
   <children>
      <HBox alignment="CENTER_LEFT" stylesheets="@../../css/calculator-sandy.css">
         <children>
            <ComboBox fx:id="bxGroups" prefWidth="200.0">
               <HBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </HBox.margin>
            </ComboBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="tableView" prefHeight="400.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="tcName" prefWidth="75.0" text="Материал" />
          <TableColumn fx:id="tcType" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" resizable="false" text="Группа" />
            <TableColumn fx:id="tcParamS" maxWidth="80.0" minWidth="80.0" resizable="false" text="S" />
            <TableColumn fx:id="tcParamX" maxWidth="80.0" minWidth="80.0" resizable="false" text="X" />
            <TableColumn fx:id="tcNote" prefWidth="75.0" text="Примечание" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
